{
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "types": ["webpack-env"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
  },
  "exclude": [
    "src/**/*.test.*",
    "**/dist",
    "node_modules",
    "**/node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts"
  ]
}
